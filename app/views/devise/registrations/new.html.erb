<div class='row'>
  <div class='col-lg-12'>
    <div id='welcomeMain'>
      <div id='welcomeMainDesc'>
        <h1 style="text-align: center;"><span>スポコミュ</span></h1>
        <div style="border: solid 1px #dbdbdb; padding: 10px; margin-bottom: 70px;">
          <h4><b>✓ 活動日を仲間と共有しよう</b></h4>
          <h4><b>✓ スポーツを通じたつながりを楽しもう</b></h4>
          <h4><b>✓ 活動履歴を記録</b></h4>
        </div>
      </div>
    </div>
  </div>

  <% unless devise_error_messages!.blank? %>
  <div class='alert alert-danger col-lg-12'>
    <p>エラーが発生しました。</p>
  </div>
  <% end %>

  <div id='loginForm' class="col-lg-12">
    <div>
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <% if provider == :line %>
            <div class="line-login">
              <%= link_to 'LINEで登録', omniauth_authorize_path(resource_name, :line) %>
            </div>
          <% end %>
<!--
          <%# if provider == :facebook %>
            <div class='fb-login'>
              <%#= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %>
              <%#= link_to 'Facebookで登録', omniauth_authorize_path(resource_name, :facebook) %>
            </div>
          <%# end %>
-->
        <% end -%>
      <% end -%>

      <div class="login-or">
        <span>or</span>
      </div>

      <div id="regByMailBtn" class="mail-login">
        <%= link_to 'メールアドレスで登録', 'javascript:void(0);',onclick: "regByMail()" %>
      </div>

      <div id="mailForm" style="display: none;">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class='login-form-field'>
          <%= f.email_field :email, placeholder: 'メールアドレス', autofocus: true %>
        </div>

        <div class='login-form-field'>
          <%= f.password_field :password, placeholder: 'パスワード', autocomplete: "off" %>
        </div>

        <div class='login-form-field'>
          <%= f.password_field :password_confirmation, placeholder: 'パスワードの確認', autocomplete: "off" %>
        </div>

        <div class='login-form-submit'>
          <%= f.submit '登録' %>
        </div>
      <% end %>
      </div>

      <div id="loginBtn">
        <%= link_to 'ログイン', new_user_session_path %>
      </div>
    </div>
  </div>
</div>

<script>
function regByMail() {
  $("#regByMailBtn").hide();
  $("#mailForm").show();
}
</script>
