<div class='container'>
  <div class='row'>
    <div class='col-lg-12'>
      <%= link_to 'グループを登録', new_group_path, class: 'pull-right btn btn-default' %>
    </div>
  </div>
  <div class='row'>
    <div class='col-lg-12'>
      <table class='table table-bordered'>
        <tbody>
          <% @groups.each do |g| %>
          <tr>
            <td><%= link_to g.name, group_path(g) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
