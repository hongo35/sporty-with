<div id="accountData" class='row'>
  <div class='col-lg-12'>
    <h4>
      <%= link_to image_with_dummy(@account.img.url, {width: 26, height: 26}), account_path(@account) %>
      &nbsp;<span><%= @account.user_name %>&nbsp;さんの所属チーム</span>
    </h4>
  </div>
</div>

<hr/>

<% if @teams.blank? %>
<div class="row">
  <div class="col-lg-12">
    <div class='alert alert-danger'>現在あなたが参加しているチームはありません。新しくチームを登録するか、参加したいチームを検索し、参加申請をしてください。</div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div id="newGroupBtn">
      <%= link_to new_team_path do %>
      <i class='fa fa-plus-circle'></i>&nbsp;チームを登録する
      <% end %>
    </div>
  </div>
</div>
<% else %>
<div id="myTeamList" class="col-lg-12">
<% @teams.each do |t| %>
<table class="table table-bordered team-list-table">
  <tr><td class="team-img" rowspan="3"><%= link_to image_with_dummy(t.img.url, {width: 96, height: 96}), team_path(t) %></td><td><b><%= link_to t.team_name, team_path(t) %></b><br/>[メンバー数: <%= @team_member_cnt[t.id] %>名]</td></tr>
  <tr><td><p><i class="fa fa-map-marker"></i>&nbsp;<%= t.location %></p></td></tr>
  <tr>
    <td>
      <p>
        <% if @next_event[t.id]['event_id'].present? %>
        <%= link_to "#{@next_event[t.id]['subject']} ( #{@next_event[t.id]['start_at']}〜 )", event_path(@next_event[t.id]['event_id']) %>
        <% else %>
        -----
        <% end %>
      </p>
    </td>
  </tr>
</table>
<% end %>
</div>
<% end %>
