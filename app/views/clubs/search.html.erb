<div class='container'>
  <div class='row'>
    <div class='col-lg-12'>
      <table id='clubInfo' class='table table-bordered'>
        <tbody>
          <tr>
            <td class='club-img' rowspan='3'><%= link_to image_tag('no_img.png'), @club.url, target: '_blank' %></td>
            <td><b><%= @club.name %></b></td>
          </tr>
          <tr><td><%= link_to @club.url, @club.url, target: '_blank' %></td></tr>
          <tr><td><%= @club.address %></td></tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class='row'>
    <div class='col-lg-12'>
      <h3>グループ</h3>
    </div>
  </div>
  <div class='row'>
    <div id='clubGroups'>
      <% @groups.each do |g| %>
      <div class='col-lg-4'>
        <table class='table table-bordered'>
          <tr><td class='group-img'><%= image_with_dummy g.img.url, {width: 150, height: 150} %></td></tr>
          <tr><td><%= g.name %></td></tr>
          <tr>
            <td class='entry-btn'>
              <%= link_to entry_group_path(g), class: 'custom-btn' do %>
              <i class='fa fa-plus-circle'></i>&nbsp;参加したい
              <% end %>
            </td>
          </tr>
          <tr>
            <td class='event-btn'>
              <%= link_to group_path(g), class: 'custom-btn error' do %>
              <i class='fa fa-calendar'></i>&nbsp;活動予定
              <% end %>
            </td>
          </tr>
        </table>
      </div>
      <% end %>
    </div>
  </div>
</div>
