<div class="row">
  <div class="col-lg-12">
    <table id="eventCommentInfo" class='table table-bordered'>
      <tr>
        <th>タイトル</th>
        <td><%= @event['subject'] %> ( <%= link_to '編集', edit_event_path(@event) %> )</td>
      </tr>
      <tr>
        <th>日時</th>
        <td><%= @event['start_at'].strftime('%-m月%-d日 %T') %> 〜</td>
      </tr>
      <tr>
        <th>説明</th>
        <td><%= h(@event['body']) %></td>
      </tr>
      <tr>
        <th>参加者</th>
        <td>
          <p style="margin-bottom: 4px;"><%= @participants.length %>人 (未回答: <%= @team_member_ids.length - @participants.length %>人)</p>
          <% @participants.each do |p| %>
            <%= link_to image_with_dummy(p['img_url'], {width: 28, height: 28}), account_path(p['id']) %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>

<% if @event_participant.blank? %>
<div id="eventParticipate" class="row">
  <div class="col-lg-12">
    <%= link_to '参加する', participate_events_path(team_id: @event.team_id, event_id: @event.id), method: :post, class: 'custom-btn' %>
  </div>
</div>
<% else %>
<div class="row" style="margin-bottom: 10px;">
  <div class="col-lg-12">
    <div class="alert alert-info">
      <p>この活動に参加予定です。</p>
    </div>
  </div>
</div>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <h4><i class="fa fa-edit"></i>&nbsp;投稿する</h4>
    <%= form_for @new_comment do |f| %>
      <%= f.hidden_field :event_id, value: @event.id %>
      <%= f.hidden_field :team_id, value: @event.team_id %>
      <%= f.hidden_field :user_id, value: @account['user_id'] %>
      <%= f.hidden_field :user_name, value: @account['user_name'] %>
      <%= f.text_area :comment, class: 'form-control', rows: 3 %>
      <div id='commentSubmitBtn'>
        <%= f.submit '投稿', class: 'pull-right' %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <h4><i class="fa fa-list"></i>&nbsp;投稿一覧</h4>
  </div>
</div>

<ul id="commentList">
  <% if @comments.blank? %>
    <li>このイベントへの投稿はありません</li>
  <% else %>
    <% @comments.each do |c| %>
    <li>
      <div class="commentImage pull-left">
        <%= link_to image_with_dummy(c['img_url'], {width: 32, height: 32}), account_path(c['id']) %>
      </div>
      <div class="commentInfo pull-left">
        <p class="name">
        <% if c['user_name'].blank? %>
          名無しさん
        <% else %>
          <%= link_to c['user_name'], account_path(c['id']) %>
        <% end %>
        </p>
        <p class="time"><%= c['created_at'] %></p>
      </div>
      <div class="clearfix"></div>
      <p class="comment"><%= h(c['comment']) %></p>
    </li>
    <% end %>
  <% end %>
</ul>
