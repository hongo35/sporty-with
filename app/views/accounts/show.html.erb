<div id="accountImage" class="row">
  <div class="col-lg-12">
    <%= image_with_dummy(@select_account.img.url, {width: 96, height: 96}) %>
  </div>
</div>
<div id="accountInfo" class="row">
  <div class="col-lg-12">
    <h5>名前</h5>
    <p><%= @select_account.user_name %></p>
  </div>
</div>

<% if @account.id == @select_account.id %>
<div class="row">
  <div class="col-lg-12">
  <%= link_to 'アカウント編集', edit_account_path(@select_account.id) %>
  <%= link_to 'ログアウト', destroy_user_session_path, method: :get %>
  </div>
</div>
<% end %>
